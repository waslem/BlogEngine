@model PagedList.IPagedList<BlogEngine.Core.ViewModels.BlogEntryView>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Blog Entries";
    PagedListRenderOptions options = new PagedListRenderOptions
    {
        UlElementClasses = new[] { "pagination pagination-sm" },
        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
        DisplayLinkToLastPage = PagedListDisplayMode.Always,
        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
        DisplayLinkToNextPage = PagedListDisplayMode.Always
    };
}
<h2>Lastest from the Blog...</h2>
<div class="col-md-8">
    @foreach (var item in Model)
    {
        @Html.HiddenFor(modelItem => item.UserId)
        @Html.HiddenFor(modelItem => item.CategoryId)
        <div class="entry">
            <h3 class="entryPaddingMain">@Html.DisplayFor(modelItem => item.BlogTitle)</h3>
            <div class="meta">
                <span class="glyphicon glyphicon-calendar"></span>&nbsp;@Html.DisplayFor(modelItem => item.DateCreated)&nbsp;
                <span class="glyphicon glyphicon-user"></span>&nbsp;By:&nbsp;@Html.DisplayFor(modelItem => item.User.UserName)
                <span class="pull-right">
                    <span class="glyphicon glyphicon-comment"></span>
                    <a href="@Url.Action("BlogEntry", "Blog", new { id = item.BlogEntryId, blogEntryName = UrlEncoder.ToFriendlyUrl(item.BlogTitle) })">&nbsp;@Html.DisplayFor(modelItem => item.Comments.Count) Comments</a>
                </span>
            </div>
            @if (item.Image != null)
            {
                if(item.Image.ImagePath != null)
                {
                    <img class="img-responsive img-entry" src="@Url.Content(item.Image.ImagePath)" alt="Image" />
                }
            }
            <div class="categoryTagHeader">
                <span  class="categoryHeader glyphicon glyphicon-paperclip"></span>&nbsp;Category: <a href='@Url.Action("Category", "Blog",  new { category = item.Category.Name })'> @Html.DisplayFor(modelItem => item.Category.Name)</a>
                <span class="tagHeader">Tags:
                   <button class="btn btn-xs btn-success"><span class="glyphicon glyphicon-tag"></span> Example</button>
                </span>
            </div>
            <p class="entryPaddingMain">@Html.DisplayFor(modelItem => item.BlogShortDescription)</p>
            <form class="entryPaddingMain" style="display: inline" action="@Url.Action("BlogEntry", "Blog", new { id=item.BlogEntryId, blogEntryName = UrlEncoder.ToFriendlyUrl(item.BlogTitle) })" method="get">
                <button class="btn btn-default">Read more »</button>
            </form>
        </div>
    }
    <div class="text-center hugFooter">
        <span class="paginationText">Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</span>
        @Html.PagedListPager( Model, page => Url.Action("Index", new { page }), options)
    </div>
</div>
<div class="col-md-4">
    <div class="sidebar">
        <div class="widget">
            @Html.Partial("_Search")
        </div>
        <div class="widget">
            <h4>Categories</h4>
            @Html.Action("GetCategories","Blog",null)
        </div>
        <div class="widget">
            <h4>Most talked about blogs</h4>
            @Html.Action("GetTopBlogs","Blog", null)
        </div>
    </div>
</div> 
