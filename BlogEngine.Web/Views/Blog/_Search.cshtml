@using (Html.BeginForm("Search", "Blog", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="form-group col-lg-9 col-md-7 col-xs-6">
        <label class="sr-only" for="searchTextBox">Search</label>
         @Html.TextBox("search", null, new { @class="form-control", id="searchTextBox" })  
    </div>
    <div class="form-group">
        <input value="Search" type="submit" class="btn btn-default"/>
    </div>
}