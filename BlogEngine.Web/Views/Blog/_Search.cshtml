@using (Html.BeginForm("Search", "Blog", new { id = "search-form" }, FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="form-group col-lg-9 col-md-7 col-xs-6">
        <label class="sr-only" for="searchTextBox">Search</label>
         @Html.TextBox("s", null, new { @class="form-control", id="searchTextBox" })  
    </div>
    <div class="form-group">
        <input style="padding-left:5px;" value="Search" type="submit" class="btn btn-default"/>
    </div>
}