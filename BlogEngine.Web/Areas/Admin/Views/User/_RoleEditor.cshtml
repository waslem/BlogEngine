@model IList<BlogEngine.Core.ViewModels.RoleCheckBox>

<div class="form-group">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
        <div class="panel panel-default">
            <div class="panel-heading">Roles</div>
            <div class="panel-body">
                <ul class="list-group">

                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <li class="list-group-item">
                            <label for="Model.Roles_@(i)__isChecked">
                                @Html.CheckBox("Roles[" + i + "].IsChecked", Model[i].IsChecked)
                            </label>
                            @Html.DisplayFor(m => Model[i].Name)
                            @Html.Hidden("Roles[" + i + "].Name", Model[i].Name)
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>