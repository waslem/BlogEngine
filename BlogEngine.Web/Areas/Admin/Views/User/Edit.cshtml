@model BlogEngine.Core.ViewModels.UserEditViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit User @Model.Username</h2>

@using (Html.BeginForm("Edit","User",FormMethod.Post,new { @class="form-horizontal"})) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.Email, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", type = "text" })
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.LastName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", type = "text" })
            @Html.ValidationMessageFor(model => model.LastName)
        </div>
    </div>
    @Html.HiddenFor(model => model.Username)
    
    @Html.Partial("_RoleEditor", Model.Roles)

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Update User" class="btn btn-primary" />
            <a href="@Url.Action("Users")">or cancel</a>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
